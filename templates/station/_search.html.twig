{{ form_start(form, { 'attr': {'class': 'row gy-2 gx-1 align-items-center d-print-none'}}) }}
{{ form_errors(form) }}
<div class="col-auto flex-grow-1 me-2">
    {{ form_row(form.dateBegin, {label_attr: {class: 'sr-on2ly'}, attr:{'class': 'my-1 mr-sm-2'} }) }}
</div>
<div class="col-auto flex-grow-1">
    {{ form_row(form.dateEnd, {label_attr: {class: 'sr-on2ly'}, attr:{'class': 'my-1 mr-sm-2'} }) }}
</div>
<div class="col-auto">
    <button type="submit" name="search" class="btn btn-primary my-1 mr-sm-2 mb-3">
        <i class="fas fa-search"></i> Rechercher
    </button>
</div>
{{ form_end(form) }}
