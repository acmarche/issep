{% extends '@AcMarcheIssep/layout.html.twig' %}
{% block body %}

    <div class="card">
        <h3 class="card-header">Stations Issep</h3>
        <div class="card-body">
            {% include '@AcMarcheIssep/_urlexecuted.html.twig' %}
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>Numéro</th>
                    <th>Nom</th>
                    <th>Indice</th>
                    <th>Configuration</th>
                    <th>Données</th>
                </tr>
                </thead>
                {% for station in stations %}
                    <tr>
                        <td>{{ station.id }}</td>
                        <td>
                            {{ station.nom }}
                        </td>
                        <td>
                            <a href="{{ path('issep_indice', {'id': station.id}) }}">Indice</a>
                        </td>
                        <td>
                            <a href="{{ path('issep_config', {'id': station.id}) }}">Config</a>
                        </td>
                        <td>
                            <a href="{{ path('issep_data', {'id': station.id}) }}">Relevés</a>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>

    </div>

{% endblock %}