{% extends '@AcMarcheIssep/layout.html.twig' %}
{% block stylesheets %}
    <style>
        .myCircle {
            height: 25px;
            width: 25px;
            border-radius: 50%;
            display: inline-block;
        }
    </style>
{% endblock %}
{% block body %}

    <div class="card">
        <h3 class="card-header">Stations Issep</h3>
        <div class="card-body">
            {% include '@AcMarcheIssep/_urlexecuted.html.twig' %}
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>Numéro</th>
                    <th>Nom</th>
                    <th>Indice</th>
                    <th>Configuration</th>
                    <th>Données</th>
                </tr>
                </thead>
                {% for station in stations %}
                    <tr>
                        <td>{{ station.id }}</td>
                        <td>
                            {{ station.nom }}
                        </td>
                        <td class="d-flex align-items-center justify-content-evenly">
                            {% if station.indice %}
                                <a href="{{ path('issep_indice', {'id': station.id}) }}">
                                    {{ station.indice.name }}
                                </a>
                                <span class="myCircle" style="background-color: {{ station.indice.color }};"></span>
                            {% endif %}
                        </td>
                        <td>
                            <a href="{{ path('issep_config', {'id': station.id}) }}">Config</a>
                        </td>
                        <td>
                            <a href="{{ path('issep_data', {'id': station.id}) }}">Relevés</a>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>

    </div>

{% endblock %}